    <script>
        // Navbar Functionality
        const navbarLinks = document.querySelectorAll(".navbar a");
        window.addEventListener("scroll", () => {
            let scrollPos = window.scrollY + 100; 
            document.querySelectorAll("section").forEach(section => {
                if (section.offsetTop <= scrollPos && section.offsetTop + section.offsetHeight > scrollPos) {
                    navbarLinks.forEach(nav => nav.classList.remove("active"));
                    document.querySelector(`.navbar a[href="#${section.id}"]`)?.classList.add("active");
                }
            });
        });

        // Quiz Functionality
        const quizContainer = document.getElementById("quiz-container");
        const questionElem = document.getElementById("question");
        const answersElem = document.getElementById("answers");
        const categoriesElem = document.getElementById("categories");

        categoriesElem.addEventListener("change", fetchQuiz);

        function fetchQuiz() {
            fetch(`https://opentdb.com/api.php?amount=1&category=${categoriesElem.value}&type=multiple`)
                .then(res => res.json())
                .then(data => displayQuestion(data.results[0]));
        }

        function displayQuestion(data) {
            questionElem.innerHTML = data.question;
            answersElem.innerHTML = "";
            const answers = [...data.incorrect_answers, data.correct_answer].sort(() => Math.random() - 0.5);
            answers.forEach(ans => {
                const btn = document.createElement("button");
                btn.textContent = ans;
                btn.onclick = () => alert(ans === data.correct_answer ? "Correct!" : `Wrong! Correct: ${data.correct_answer}`);
                answersElem.appendChild(btn);
            });
            quizContainer.style.display = "block";
        }

        // Smooth Scroll
        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: "smooth" });
        }
    </script>
</body>
